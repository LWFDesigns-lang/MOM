{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/docker/MOM"]
    },
    "logic-validator": {
      "command": "node",
      "args": [".claude/mcp-servers/logic-validator/index.js"],
      "cwd": "/home/docker/MOM"
    },
    "data-etsy": {
      "command": "node",
      "args": [".claude/mcp-servers/data-etsy/index.js"],
      "cwd": "/home/docker/MOM",
      "env": {
        "ETSY_API_KEY": "${ETSY_API_KEY}",
        "ETSY_ACCESS_TOKEN": "${ETSY_ACCESS_TOKEN}",
        "SERPER_API_KEY": "${SERPER_API_KEY}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "alwaysAllow": ["etsy_search_listings", "etsy_get_listing_count"]
    },
    "data-trends": {
      "command": "node",
      "args": [".claude/mcp-servers/data-trends/index.js"],
      "cwd": "/home/docker/MOM"
    },
    "docker": {
      "command": "docker.exe",
      "args": ["mcp", "gateway", "run"],
      "alwaysAllow": ["mcp-find", "mcp-add", "mcp-config-set", "brave_web_search", "fetch", "perplexity_research"]
    }
  },
  "security_compliance": {
    "auth_method": "oauth_only",
    "static_keys": false
  }
}